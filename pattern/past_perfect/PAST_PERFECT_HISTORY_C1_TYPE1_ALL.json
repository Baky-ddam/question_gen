        "distractor": "relinquish"
      },
      "forge": {
        "correct_forms": ["had forged"],
        "wrong_forms": ["has forged", "forged", "was forging"],
        "objects": ["strategic alliances", "lasting agreements", "stronger coalitions", "diplomatic ties"],
        "distractor": "sever"
      },
      "suppress": {
        "correct_forms": ["had suppressed"],
        "wrong_forms": ["have suppressed", "suppressed", "were suppressing"],
        "objects": ["the rebellion earlier", "internal dissent", "the uprising", "opposition forces"],
        "distractor": "encourage"
      },
      "preserve": {
        "correct_forms": ["had preserved"],
        "wrong_forms": ["has preserved", "preserved", "was preserving"],
