    "CONDITION": ["more time", "enough money", "better resources", "more experience"],
    "RESULT": ["travel around the world", "start their own business", "pursue their dreams", "take on bigger challenges"],
    "VERB": {
      "had": {
        "correct_forms": ["had"],
        "wrong_forms": ["have", "would have", "has"],
        "objects": [],
        "distractor": "squander"
      },
      "knew": {
        "correct_forms": ["knew"],
        "wrong_forms": ["know", "would know", "knows"],
