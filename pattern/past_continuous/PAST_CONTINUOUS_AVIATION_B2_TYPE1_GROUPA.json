    "SUBJ": ["you", "we", "they"],
    "PREP_PLACE": [
      "in the control tower",
      "at the departure gate",
      "on the tarmac",
      "in the cockpit"
    ],
    "INTERRUPTION": [
      "turbulence alerts appeared on the system",
      "the weather conditions deteriorated rapidly",
      "an emergency signal was received",
      "technical malfunctions were detected"
    ],
    "CONSEQUENCE": [
      "required immediate rerouting of aircraft",
      "necessitated a complete protocol review",
      "prompted an urgent safety assessment",
      "demanded coordinated response from all units"
    ],
    "VERB": {
      "monitor": {
        "correct_forms": ["were monitoring"],
        "wrong_forms": ["was monitoring", "monitored", "are monitoring"],
        "objects": ["the radar display", "the flight trajectories", "the air traffic patterns", "the communication channels"],
        "distractor": "disregard"
      },
      "coordinate": {
        "correct_forms": ["were coordinating"],
        "wrong_forms": ["was coordinating", "coordinated", "are coordinating"],
        "objects": ["the landing sequences", "the departure schedules", "the ground operations", "the flight paths"],
        "distractor": "obstruct"
      },
      "oversee": {
        "correct_forms": ["were overseeing"],
        "wrong_forms": ["was overseeing", "oversaw", "are overseeing"],
        "objects": ["the boarding procedures", "the refueling operations", "the maintenance checks", "the cargo loading"],
        "distractor": "overlook"
      },
      "assess": {
        "correct_forms": ["were assessing"],
        "wrong_forms": ["was assessing", "assessed", "are assessing"],
        "objects": ["the runway conditions", "the fuel requirements", "the safety compliance", "the weather forecasts"],
        "distractor": "undermine"
      }
    }
  }
