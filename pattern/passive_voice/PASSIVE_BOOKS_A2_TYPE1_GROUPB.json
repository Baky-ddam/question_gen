    "VERB": {
      "write": {
        "correct_forms": ["was written"],
        "wrong_forms": ["were written", "is written", "has been written"],
        "objects": [],
        "distractor": "destroyed"
      },
      "publish": {
        "correct_forms": ["was published"],
        "wrong_forms": ["were published", "is published", "has been published"],
        "objects": [],
        "distractor": "banned"
      },
      "translate": {
        "correct_forms": ["was translated"],
        "wrong_forms": ["were translated", "is translated", "has been translated"],
        "objects": [],
        "distractor": "ignored"
      },
      "read": {
        "correct_forms": ["was read"],
        "wrong_forms": ["were read", "is read", "has been read"],
        "objects": [],
        "distractor": "forgotten"
      }
    }
  }
