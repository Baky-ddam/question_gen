      },
      "drink": {
        "correct_forms": ["have drunk"],
        "wrong_forms": ["has drunk", "had drunk", "drank"],
        "objects": ["hot chocolate", "lemonade", "milkshake", "juice"],
        "distractor": "spill"
      },
      "make": {
        "correct_forms": ["have made"],
        "wrong_forms": ["has made", "had made", "made"],
