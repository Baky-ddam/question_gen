    "SUBJ": ["he", "she", "my friend", "my brother", "my sister", "the child"],
    "VERB": {
      "eat": {
        "correct_forms": ["has eaten"],
        "wrong_forms": ["have eaten", "had eaten", "ate"],
        "objects": ["pizza", "ice cream", "chocolate", "sushi"],
        "distractor": "waste"
      },
      "try": {
        "correct_forms": ["has tried"],
        "wrong_forms": ["have tried", "had tried", "tried"],
        "objects": ["this cake", "the cookies", "new food", "this snack"],
        "distractor": "refuse"
      },
      "drink": {
        "correct_forms": ["has drunk"],
        "wrong_forms": ["have drunk", "had drunk", "drank"],
        "objects": ["hot chocolate", "lemonade", "milkshake", "juice"],
        "distractor": "spill"
      },
      "make": {
        "correct_forms": ["has made"],
        "wrong_forms": ["have made", "had made", "made"],
        "objects": ["cookies", "a cake", "popcorn", "pancakes"],
        "distractor": "burn"
      }
    }
  }
