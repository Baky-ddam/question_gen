        "objects": ["English", "math", "science"],
        "distractor": "avoid"
      },
      "do": {
        "correct_forms": ["will do"],
        "wrong_forms": ["does", "is going to do", "would do"],
        "objects": ["homework", "the project", "an exam"],
        "distractor": "skip"
      },
      "learn": {
        "correct_forms": ["will learn"],
        "wrong_forms": ["learns", "is going to learn", "would learn"],
        "objects": ["new words", "a song", "grammar"],
        "distractor": "forget"
      },
      "read": {
        "correct_forms": ["will read"],
        "wrong_forms": ["reads", "is going to read", "would read"],
        "objects": ["a book", "the lesson", "a story"],
        "distractor": "ignore"
      }
    },
    "FUTURE_TIME": ["tomorrow", "next week", "later", "soon"]
