      },
      "shift": {
        "correct_forms": ["will shift"],
        "wrong_forms": ["shifts", "is going to shift", "would shift"],
        "objects": ["fundamentally", "toward new equilibria", "in unprecedented ways"],
        "distractor": "obliterate"
      },
      "transform": {
        "correct_forms": ["will transform"],
        "wrong_forms": ["transforms", "is going to transform", "would transform"],
        "objects": ["social structures", "economic dependencies", "policy priorities"],
        "distractor": "countermand"
      }
    },
    "TREND": ["rural populations migrate to metropolitan areas", "fertility rates continue declining", "life expectancy increases", "economic opportunities concentrate", "climate conditions shift", "healthcare systems improve"]
  }
