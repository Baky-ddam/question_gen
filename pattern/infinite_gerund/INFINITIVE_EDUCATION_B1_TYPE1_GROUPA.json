      "graduate": {
        "correct_forms": ["to graduate"],
        "wrong_forms": ["graduating", "graduate", "graduates"],
        "objects": ["with honors", "on time", "this year", "with a degree"],
        "distractor": "to fail"
      },
      "study": {
        "correct_forms": ["to study"],
        "wrong_forms": ["studying", "study", "studies"],
        "objects": ["abroad", "medicine", "engineering", "harder"],
        "distractor": "to skip"
      },
      "complete": {
        "correct_forms": ["to complete"],
        "wrong_forms": ["completing", "complete", "completes"],
        "objects": ["the course", "the degree", "assignments", "research"],
        "distractor": "to abandon"
      },
      "attend": {
        "correct_forms": ["to attend"],
        "wrong_forms": ["attending", "attend", "attends"],
        "objects": ["university", "lectures", "seminars", "workshops"],
        "distractor": "to skip"
      }
    },
    "CONTEXT": ["next year", "this semester", "before graduation", "in the future", "soon"]
  }
