{
  "pattern_id": "INFINITIVE_SHOPPING_A2_TYPE1_GROUPA",
  "focus": "infinitive_required",
  "level": "A2",
  "domain": "shopping",
  "category": "grammar",
  "template_type": "type_1",
  "subject_group": "group_a",
  "sub_grammar": ["present_simple"],
  "template": "{SUBJ} {MAINVERB} ____ {TIME}.",
  "example": "I want to buy new clothes this weekend.",
  "explanation": "Some verbs are followed by infinitives (to + verb). Common verbs: want, need, like, plan, hope.",
  "chunks": {
    "SUBJ": ["I", "you", "we", "they"],
    "MAINVERB": ["want", "need", "like", "plan", "hope"],
    "VERB": {
      "buy": {
        "correct_forms": ["to buy"],
        "wrong_forms": ["buying", "buy", "bought"],
        "objects": ["new clothes", "shoes", "a new phone", "groceries"],
        "distractor": "to waste"
      },
      "shop": {
        "correct_forms": ["to shop"],
        "wrong_forms": ["shopping", "shop", "shopped"],
        "objects": ["online", "at the mall", "for gifts", "for food"],
        "distractor": "to steal"
      },
      "save": {
        "correct_forms": ["to save"],
        "wrong_forms": ["saving", "save", "saved"],
        "objects": ["money", "for a trip", "for a car", "for the future"],
        "distractor": "to waste"
      },
      "find": {
        "correct_forms": ["to find"],
        "wrong_forms": ["finding", "find", "found"],
        "objects": ["good deals", "the best prices", "a gift", "something nice"],
        "distractor": "to lose"
      }
    },
    "TIME": ["this weekend", "today", "tomorrow", "next week"]
  }
}
