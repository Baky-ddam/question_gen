      },
      "sequence": {
        "correct_forms": ["to sequence"],
        "wrong_forms": ["sequencing", "sequence", "sequences"],
        "objects": ["genetic markers", "molecular structures", "genomic data", "protein configurations"],
        "distractor": "to contaminate"
      },
      "synthesize": {
        "correct_forms": ["to synthesize"],
        "wrong_forms": ["synthesizing", "synthesize", "synthesizes"],
        "objects": ["novel compounds", "therapeutic agents", "biomaterials", "catalytic structures"],
        "distractor": "to decompose"
      },
      "validate": {
        "correct_forms": ["to validate"],
        "wrong_forms": ["validating", "validate", "validates"],
        "objects": ["theoretical predictions", "experimental hypotheses", "computational models", "empirical findings"],
        "distractor": "to invalidate"
      }
    },
    "TREND": ["computational capabilities", "technological precision", "methodological sophistication", "interdisciplinary collaboration", "analytical capabilities"],
    "PURPOSE": ["generate predictive insights", "advance theoretical understanding", "contribute to scientific knowledge", "enable breakthrough discoveries", "inform practical applications"]
  }
