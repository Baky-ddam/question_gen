      "use": {
        "correct_forms": ["using"],
        "wrong_forms": ["to use", "use", "uses"],
        "objects": ["larger sample sizes", "advanced methodologies", "control groups", "multiple data sources"],
        "distractor": "ignoring"
      },
      "analyze": {
        "correct_forms": ["analyzing"],
        "wrong_forms": ["to analyze", "analyze", "analyzes"],
        "objects": ["the data thoroughly", "multiple variables", "statistical patterns", "research outcomes"],
        "distractor": "overlooking"
      },
      "replicate": {
        "correct_forms": ["replicating"],
        "wrong_forms": ["to replicate", "replicate", "replicates"],
        "objects": ["the study", "the experiment", "previous findings", "the methodology"],
        "distractor": "falsifying"
      },
      "document": {
        "correct_forms": ["documenting"],
        "wrong_forms": ["to document", "document", "documents"],
        "objects": ["all procedures", "research methods", "findings", "limitations"],
        "distractor": "concealing"
      }
    },
    "PURPOSE": ["ensure statistical validity", "maintain research integrity", "strengthen conclusions", "improve reliability", "support findings"]
  }
