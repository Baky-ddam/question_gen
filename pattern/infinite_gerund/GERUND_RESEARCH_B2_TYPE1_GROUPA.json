  "subject_group": "group_a",
  "sub_grammar": ["present_simple"],
  "template": "{SUBJ} {MAINVERB} ____ to {PURPOSE}.",
  "example": "Researchers recommend using larger sample sizes to ensure statistical validity.",
  "explanation": "Some verbs require gerunds (verb + -ing). Academic verbs with gerunds: recommend, suggest, consider, involve, require, justify.",
  "chunks": {
    "SUBJ": ["I", "we", "they", "researchers", "scientists", "academics"],
    "MAINVERB": ["recommend", "suggest", "consider", "involve", "justify"],
