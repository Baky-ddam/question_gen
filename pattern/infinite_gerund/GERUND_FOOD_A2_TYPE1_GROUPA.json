        "correct_forms": ["cooking"],
        "wrong_forms": ["to cook", "cook", "cooked"],
        "objects": ["dinner", "breakfast", "lunch", "meals"],
        "distractor": "burning"
      },
      "eat": {
        "correct_forms": ["eating"],
        "wrong_forms": ["to eat", "eat", "ate"],
        "objects": ["pizza", "pasta", "salads", "snacks"],
        "distractor": "wasting"
      },
      "make": {
        "correct_forms": ["making"],
        "wrong_forms": ["to make", "make", "made"],
        "objects": ["sandwiches", "cakes", "cookies", "soup"],
        "distractor": "ruining"
      },
      "try": {
        "correct_forms": ["trying"],
        "wrong_forms": ["to try", "try", "tried"],
        "objects": ["new recipes", "new dishes", "different foods", "local cuisine"],
        "distractor": "avoiding"
      }
    },
    "TIME": ["every day", "on weekends", "in the evening", "at home"]
  }
