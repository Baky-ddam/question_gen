{
  "pattern_id": "GERUND_FOOD_A2_TYPE1_GROUPB",
  "focus": "gerund_required",
  "level": "A2",
  "domain": "food",
  "category": "grammar",
  "template_type": "type_1",
  "subject_group": "group_b",
  "sub_grammar": ["present_simple"],
  "template": "{SUBJ} {MAINVERB} ____ {TIME}.",
  "example": "She enjoys cooking dinner every evening.",
  "explanation": "Some verbs are followed by gerunds (verb + -ing). Common verbs: enjoy, love, like, finish, keep.",
  "chunks": {
    "SUBJ": ["he", "she", "my mom", "my dad"],
    "MAINVERB": ["enjoys", "loves", "likes", "finishes"],
    "VERB": {
      "cook": {
        "correct_forms": ["cooking"],
        "wrong_forms": ["to cook", "cook", "cooked"],
        "objects": ["dinner", "breakfast", "lunch", "meals"],
        "distractor": "burning"
      },
      "eat": {
        "correct_forms": ["eating"],
        "wrong_forms": ["to eat", "eat", "ate"],
        "objects": ["pizza", "pasta", "salads", "snacks"],
        "distractor": "wasting"
      },
      "bake": {
        "correct_forms": ["baking"],
        "wrong_forms": ["to bake", "bake", "baked"],
        "objects": ["cakes", "bread", "cookies", "pies"],
        "distractor": "burning"
      },
      "prepare": {
        "correct_forms": ["preparing"],
        "wrong_forms": ["to prepare", "prepare", "prepared"],
        "objects": ["healthy meals", "quick snacks", "family dinners", "special dishes"],
        "distractor": "skipping"
      }
    },
    "TIME": ["every day", "on weekends", "in the morning", "for the family"]
  }
}
