        "objects": [
          "the manuscript",
          "the first draft",
          "the article revisions",
          "the publication proofs"
        ],
        "distractor": "neglect"
      },
      "revise": {
        "correct_forms": [
          "am revising"
        ],
        "wrong_forms": [
          "is revising",
          "revise",
          "was revising"
        ],
        "objects": [
          "the thesis structure",
          "my writing style",
          "the argumentation",
          "the conclusion section"
        ],
        "distractor": "overlook"
      },
      "compose": {
