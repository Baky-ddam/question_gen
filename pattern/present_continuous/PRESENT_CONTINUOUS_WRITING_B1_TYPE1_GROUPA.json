    "SUBJ": [
      "I"
    ],
    "PARALLEL_ACTION": [
      "consulting my research notes",
      "listening to classical music",
      "waiting for feedback",
      "taking a short break"
    ],
    "VERB": {
      "draft": {
        "correct_forms": [
          "am drafting"
        ],
        "wrong_forms": [
          "is drafting",
          "draft",
          "was drafting"
        ],
        "objects": [
          "the final chapter",
          "an academic essay",
          "a research proposal",
          "the introduction"
        ],
        "distractor": "abandon"
      },
      "edit": {
        "correct_forms": [
          "am editing"
        ],
        "wrong_forms": [
          "is editing",
          "edit",
          "was editing"
