    "SUBJ": ["they", "the committee", "the board", "the leadership"],
    "PROMISE": ["address all concerns", "implement the changes", "review the feedback", "consider all options"],
    "VERB": {
      "would address": {
        "correct_forms": ["would address"],
        "wrong_forms": ["will address", "could address", "are addressing"],
        "objects": [],
        "distractor": "refuse"
      },
      "would implement": {
        "correct_forms": ["would implement"],
        "wrong_forms": ["will implement", "could implement", "are implementing"],
        "objects": [],
        "distractor": "reject"
      }
    }
  }
