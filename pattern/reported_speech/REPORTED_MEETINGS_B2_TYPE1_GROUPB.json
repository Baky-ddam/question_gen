      "could deteriorate": {
        "correct_forms": ["could deteriorate"],
        "wrong_forms": ["can deteriorate", "would deteriorate", "might deteriorate"],
        "objects": [],
        "distractor": "reassure"
      },
      "could escalate": {
        "correct_forms": ["could escalate"],
        "wrong_forms": ["can escalate", "would escalate", "will escalate"],
