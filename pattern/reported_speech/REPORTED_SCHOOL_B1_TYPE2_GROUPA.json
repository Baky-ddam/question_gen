    "QUESTION_CONTENT": ["finished our homework", "understood the lesson", "completed the assignment", "prepared for the test"],
    "VERB": {
      "had finished": {
        "correct_forms": ["had finished"],
        "wrong_forms": ["have finished", "finished", "were finishing"],
        "objects": [],
        "distractor": "deny"
      },
      "had understood": {
        "correct_forms": ["had understood"],
        "wrong_forms": ["understood", "have understood", "were understanding"],
        "objects": [],
        "distractor": "refuse"
      }
    }
  }
