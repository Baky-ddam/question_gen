  "domain": "news",
  "category": "grammar",
  "template_type": "type_2",
  "subject_group": "group_a",
  "sub_grammar": ["reported_speech"],
  "template": "The {SOURCE} told viewers that {SUBJ} ____ {ACTION}.",
  "example": "The anchor told viewers that the storm had caused major damage.",
