  "chunks": {
    "SOURCE": ["anchor", "reporter", "correspondent", "presenter"],
    "SUBJ": ["the storm", "the earthquake", "the floods", "the fires"],
    "ACTION": ["caused major damage", "destroyed many homes", "affected thousands of people", "disrupted transportation"],
    "VERB": {
      "had caused": {
        "correct_forms": ["had caused"],
        "wrong_forms": ["caused", "has caused", "was causing"],
        "objects": [],
        "distractor": "deny"
      },
      "had destroyed": {
        "correct_forms": ["had destroyed"],
        "wrong_forms": ["destroyed", "has destroyed", "was destroying"],
        "objects": [],
        "distractor": "ignore"
      }
    }
  }
