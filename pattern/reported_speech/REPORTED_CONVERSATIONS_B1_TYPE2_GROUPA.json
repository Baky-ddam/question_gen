    "TIME": ["before dinner", "early in the morning", "the day before", "last week"],
    "VERB": {
      "had finished": {
        "correct_forms": ["had finished"],
        "wrong_forms": ["finished", "have finished", "were finishing"],
        "objects": [],
        "distractor": "forget"
      },
      "had completed": {
        "correct_forms": ["had completed"],
        "wrong_forms": ["completed", "have completed", "were completing"],
        "objects": [],
        "distractor": "neglect"
      }
    }
  }
