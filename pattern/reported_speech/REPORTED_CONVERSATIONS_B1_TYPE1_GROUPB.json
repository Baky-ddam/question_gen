  "chunks": {
    "REPORTER": ["He", "She", "My mother", "The doctor"],
    "SUBJ": ["she", "he", "the patient", "the baby"],
    "COMPLEMENT": ["feeling much better", "very busy at work", "happy with the result", "worried about the exam"],
    "VERB": {
      "was": {
        "correct_forms": ["was"],
        "wrong_forms": ["is", "has been", "will be"],
        "objects": [],
        "distractor": "deny"
      },
      "had been": {
        "correct_forms": ["had been"],
        "wrong_forms": ["has been", "was", "is"],
        "objects": [],
        "distractor": "ignore"
      }
    }
  }
}
