      },
      "roll out": {
        "correct_forms": ["roll out"],
        "wrong_forms": ["roll on", "roll off", "roll in"],
        "objects": ["update", "software", "feature", "application"],
        "distractor": "withdraw"
      },
      "phase out": {
        "correct_forms": ["phase out"],
        "wrong_forms": ["phase on", "phase off", "phase in"],
