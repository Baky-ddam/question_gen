{
  "pattern_id": "PHRASAL_HEALTH_B1_TYPE1_GROUPA",
  "focus": "phrasal_verb_inseparable",
  "level": "B1",
  "domain": "health",
  "category": "grammar",
  "template_type": "type_1",
  "subject_group": "group_a",
  "sub_grammar": ["phrasal_verbs"],
  "template": "{SUBJ} ____ {NOUN} {CONTEXT}.",
  "example": "I get over the flu after resting for a week.",
  "explanation": "These phrasal verbs are used to describe health conditions and recovery. The particle is essential to the meaning.",
  "chunks": {
    "SUBJ": ["I", "you", "we", "they"],
    "CONTEXT": ["after resting for a week", "with proper treatment", "eventually", "with time", "by staying positive"],
    "VERB": {
      "get over": {
        "correct_forms": ["get over"],
        "wrong_forms": ["get on", "get off", "get through"],
        "objects": ["the flu", "the cold", "the illness", "the infection"],
        "distractor": "catch"
      },
      "come down with": {
        "correct_forms": ["come down with"],
        "wrong_forms": ["come up with", "come on with", "come off with"],
        "objects": ["a fever", "a cold", "the flu", "an illness"],
        "distractor": "recover"
      },
      "work out": {
        "correct_forms": ["work out"],
        "wrong_forms": ["work on", "work off", "work up"],
        "objects": ["at the gym", "every morning", "three times a week", "regularly"],
        "distractor": "rest"
      },
      "cut down on": {
        "correct_forms": ["cut down on"],
        "wrong_forms": ["cut up on", "cut off on", "cut out on"],
        "objects": ["sugar", "junk food", "caffeine", "alcohol"],
        "distractor": "increase"
      }
    }
  }
}
